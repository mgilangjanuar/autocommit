{
  "compilerOptions": {
    "target": "es6",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": false
  },
  "include": [
    "src/**/*.mts",
    "src/**/*.cts"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "node_modules"
  ]
}